<?xml version="1.0"?>
<thlogic>
    <attr sel="#header" th:replace="header :: header"/>
    <attr sel="#footer" th:replace="footer :: footer"/>

    <attr sel="#article-form" th:action="@{'/article/update-view/' + ${article.id}}" th:method="post"/>

    <attr sel="#article-id" th:value="${article.id}"/>
    <attr sel="#article-title" th:value="${article.articleResponse.title}"/>
    <attr sel="#article-content" th:text="${article.content}"/>

    <attr sel="#article-creator" th:text="${article.articleResponse.creator}"/>
    <attr sel="#article-create-time" th:datetime="${article.articleResponse.createTime}"
          th:text="${#temporals.format(article.articleResponse.createTime, 'yyyy-MM-dd HH:mm:ss')}"/>
    <attr sel="#article-hashtag" th:value="${article.articleResponse.hashtag}"/>

    <attr sel="#cancel-update" th:onclick="'history.back()'"></attr>
    <attr sel="#save-update" th:text="저장"></attr>

</thlogic>